<h2>Edit Review</h2>

<%= form_for([@professor, @professor.reviews.build], url: professor_review_path(@professor, @review), method: :patch) do |f| %>
  <div class="form-group", style="width: 25%">
    <%= f.label :rating %><br>
    <div id="star-rating", data-score=<%= @review.rating %>></div>
  </div>
  <div class="form-group", style="width: 25%">
    <%= f.label :classname, "Class" %><br>
    <%= f.text_field :classname, class: "form-control", value: @review.classname %>
  </div>
  <div class="form-group", style="width: 40%">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class: "form-control", style: "height: 180px", value: @review.comment %>
  </div>
  <div>
    <%= f.submit "Update Review", class: "btn btn-success" %>
    <%= link_to "Back", @professor, class: "btn btn-default" %>
  </div>
<% end %>

<script>
  $("#star-rating").raty({
  	half: true,
    path: "/assets/",
    score: function() {
    	return $(this).attr("data-score");
    },
    scoreName: "review[rating]"
  })
</script>