<%= form_for([@professor, @professor.reviews.build]) do |f| %>
  <div class="form-group", style="width: 25%">
    <%= f.label :rating %><br>
    <%= f.number_field :rating, class: "form-control" %>
  </div>
  <div class="form-group", style="width: 25%">
    <%= f.label :classname, "Class" %><br>
    <%= f.text_field :classname, class: "form-control" %>
  </div>
  <div class="form-group", style="width: 40%">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class: "form-control", style: "height: 180px" %>
  </div>
  <div>
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>