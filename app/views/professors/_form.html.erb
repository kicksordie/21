    <%= f.label :department, "Department(s)" %><br>
    <%= f.select(:department, ['Computer Science', 'Physics', 'Biology'], :multiple => true) %>
  </div>
  <div class="field">
    <%= f.label :link, "Link to CV or personal website" %><br>
    <%= f.text_field :link %>
  </div>
  <div>
    <%= f.label :image, "Upload a profile picture" %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
