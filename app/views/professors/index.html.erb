<h1>Listing professors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Department</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td>
          <%= link_to professor do %>
            <%= image_tag professor.image.url, size: '250x350' %>
          <% end %>
        </td>
        <td><%= professor.name %></td>
        <td><%= professor.title %></td>
        <td><%= professor.department %></td>
        <td><%= professor.link %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>